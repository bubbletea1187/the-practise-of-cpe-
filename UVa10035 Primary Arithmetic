#include<stdio.h>
#include<stdlib.h>

int main(){
	int a,b,c;
	while(scanf("%d %d",&a,&b)&&(a||b)){
		c=0;
	int q=0;
	while(a||b){

	if((a%10) +(b%10)+q>=10)
	{
		c++;
		q=1;
		a /=10;
		b/=10;	
	}
	else{
		q=0;
		a /=10;
		b/=10;
	}
	
	
	} 
	if(c==0){
	
	printf("No carry operation.\n");
	}
	else if(c==1){
		printf("1 carry operation.\n");
	}
	else{
		printf("%d carry operations.\n",c);
		
	}
	
}
return 0;	
} 
